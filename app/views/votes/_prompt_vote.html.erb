<div id="prompt_vote">
		
<% if current_user && prompt.user_id != current_user.id %>
		<h2>Vote on this prompt</h2>
	<% 
		# You can't vote if it is your prompt, 
		# you are not logged in, 
		# or you have already voted on this item
	
	%>
	 	<span class="button_container green">
			<%= link_to "Like", prompt_votes_path(prompt, :vote_direction => :up), 
				:method => :post,
				:remote => true
			%>
		</span>	
		<span class="button_container orange">
				<%= link_to "Meh", prompt_votes_path(prompt, :vote_direction => :down), 
					:method => :post,
					:remote => true
				%>
		</span>
<% elsif current_user && prompt.user_id == current_user.id %>
		<span>You suggested this prompt.</span>
<% end %>

	<div>
		<% if prompt.votes.size > 0 %>
			<%= prompt.votes_for > 0 ? prompt.votes_for : "0" %> liked this prompt. <%= prompt.votes_against > 0 ? prompt.votes_against : "0" %> shrugged.
		<% end %>
		<% if current_user %>
		<% if current_user.voted_on?(prompt) %>
			<br />
			<% if current_user.voted_for?(prompt) %>
				<%= link_to prompt.user.login, profile_url(prompt.user) %>'s prompt gave you glee.
			<% elsif %>
				<%= link_to prompt.user.login, profile_url(prompt.user) %>'s prompt didn't thrill you.
			<% end %>
		<% end %>
		<% end %>
	</div>
</div>