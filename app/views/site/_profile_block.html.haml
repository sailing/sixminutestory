%h3
	= h @story.user.login
	- if is_user && (current_user.id == @story.user.id)
		%small
			= link_to "manage profile", edit_account_path
	- elsif is_user && current_user.id != @story.user.id
		= render :partial => 'site/following_toggle', :locals => {:user => @story.user}
.information
	- if is_admin
		%p
			%i.envelope
			%span
				= @story.user.try(:email_address)
	%p
		%i.icon-calendar
		%span
			= time_ago_in_words(@story.user.created_at)
			ago
	- if @story.user.followers.any?
		%p
			%i.icon-group
			%span
				= @story.user.followers.count

	%p
		%i.icon-thumbs-up
		%span
			= @story.user.karma
	%p
		%i.icon-edit
		%span
			= link_to @story.user.stories.where(active: true).count, profile_path(@story.user)
			(
			= link_to "view stories", profile_path(@story.user)
			)
	- if @story.user.website.present?
		%p
			%i.icon-globe
			%span
				= link_to "Visit website", @story.user.website, :title => @story.user.website, :rel => 'nofollow'
	- if @story.user.profile.present?
		.profile
			%h6
				profile
			%p
				= auto_link(simple_format(@story.user.profile))