<% else %>

<h1>Erm...
</h1>

	<div id="no_stories">
		
		<p>
			There are no <em>recent</em> stories! However, you may find more stories <%= link_to "elsewhere", browse_by_tags_path %>.
		</p>
		
	</div>
<% end %>