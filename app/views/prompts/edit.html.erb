<%= render :partial => 'admin' %>
<h1>Editing prompt</h1>

<% form_for(@prompt) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :hero %><br />
    <%= f.text_field :hero %>
  </p>
  <p>
    <%= f.label :villain %><br />
    <%= f.text_field :villain %>
  </p>
  <p>
    <%= f.label :goal %><br />
    <%= f.text_field :goal %>
  </p>

  <p>
    <%= f.label :refcode %><br />
    <%= f.text_field :refcode %>
  </p>

  <p>
    <%= f.label :kind %><br />
    <%= f.text_field :kind %>
  </p>

  <p>
    <%= f.label :attribution %><br />
    <%= f.text_field :attribution %>
  </p>
  <p>
    <%= f.label :attribution_url %><br />
    <%= f.text_field :attribution_url %>
  </p>
  <p>
    <%= f.label :license %><br />
    <%= f.text_field :license %>
  </p>

	<p>
		<%= f.label :use_on %><br />
		<%= date_select("prompt","use_on", :default => 1.day.from_now)%>
	</p>
  <p>
<%= image_submit_tag("save.png", :name => "save", :id => "save-button", :disabled => false) %>  </p>
<% end %>

<% if is_admin %>
<%= link_to 'Destroy', @prompt, :confirm => 'Are you sure?', :method => :delete %> || 
<%= link_to 'Back', prompts_path %>
<% end %>