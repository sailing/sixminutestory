<%= render :partial => 'admin' %>
<h1>Editing prompt</h1>
<%= form_for(@prompt, html: {class: "form-horizontal"}) do |f| %>
	<% if @prompt.errors.any? %>
  	<div id="errorExplanation">
  		<h2>Your story hasn't been saved yet.</h2>
  		<h3>Please check for errors below.</h3>

  		  <ul>
  		    <% @prompt.errors.each do |attribute, msg| %>
  		      <li><%= msg %></li>
  		    <% end %>
  		  </ul>
  	</div>
	<% end %>

  <div class="form-group">
    <%= f.label :hero, class: "form-label" %><br />
    <%= f.text_field :hero, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :villain, class: "form-label" %><br />
    <%= f.text_field :villain, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :goal, class: "form-label" %><br />
    <%= f.text_field :goal, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :refcode, class: "form-label" %><br />
    <%= f.text_field :refcode, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :kind, class: "form-label" %><br />
    <%= f.text_field :kind, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :attribution, class: "form-label" %><br />
    <%= f.text_field :attribution, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :attribution_url, class: "form-label" %><br />
    <%= f.text_field :attribution_url, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :license, class: "form-label" %><br />
    <%= f.text_field :license, class: "form-control" %>
  </div>

	<div class="form-group">
		<%= f.label :use_on, class: "form-label" %><br />
		<%= date_select("prompt","use_on", :default => 1.day.from_now, class: "form-control")%>
	</div>
  <div class="form-group">
    <%= f.submit "Save", :id => "save-button", :disabled => false %>  
  </div>
<% end %>

<% if is_admin %>
  <%= link_to 'Destroy', @prompt, :confirm => 'Are you sure?', :method => :delete %> || 
  <%= link_to 'Back', prompts_path %>
<% end %>