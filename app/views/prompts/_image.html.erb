<div class="card col-md-4 p-0 mb-3 mb-md-0 shadow-sm">
	<div class="card-body d-flex justify-content-center flex-column align-items-center">
		<%= link_to tag("img", { :src => image.refcode, style: "max-height: 250px;", class: "img-fluid rounded mb-2" }), write_to_prompt_url(image) %>

		<% if image.attribution.present? and image.attribution_url.present? and image.kind.present? and image.license.present? %>
			<div>
				by <%= link_to image.attribution, image.attribution_url %> 
				on <%= image.kind %>. 
				<br />
				Licensed under: 
					<%= link_to image.license_url do 
							if image.license_image_url 
								image_tag(image.license_image_url, :width => "88", :height=>"31", :style=>"width:88px;height:31px;vertical-align:middle;") 
							else
								image.license_en
							end
						end
					%>.
			</div>
		<% end %>
		<br />
	</div>
	<div class="card-footer justify-content-center d-flex bg-white border-top-0">
		<div class="btn-group">
			<%= link_to 'Write', write_to_prompt_path(image.id), class: "btn btn-primary" %>
			
			<%= link_to "Read #{image.stories_count} stories", prompt_url(image), class: "btn btn-danger" %>

			<% if is_admin %>
				<%= link_to 'Edit', edit_prompt_path(image), class: "btn btn-warning" %>
			<% end %>
		</div>
	</div>
</div>


