<div class="card col-md-4 mr-3 p-0 ">
	<div class="card-body d-flex justify-content-center flex-column align-items-center">
		<%= firstline.refcode %>
	</div>
	<div class="card-footer justify-content-center d-flex bg-white border-top-0">
		<div class="btn-group">
			<%= link_to 'Write', write_to_prompt_path(firstline.id), class: "btn btn-primary" %>
			
			<%= link_to "Read #{firstline.stories_count} stories", prompt_url(firstline), class: "btn btn-warning" %>

			<% if is_admin %>
				<%= link_to 'Edit', edit_prompt_path(firstline), class: "btn btn-secondary" %>
			<% end %>
		</div>
	</div>
</div>