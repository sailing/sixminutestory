<div class="card col-md-4 p-0 mb-3 mb-md-0">
	<div class="card-body d-flex justify-content-center flex-column align-items-center col-md-10 offset-md-1 lead">
		<div class="collection">
			<dt>Hero</dt>
	    <dd><%= hvg.hero %></dd>
	    <dt>Villain</dt>
	    <dd><%= hvg.villain %></dd>
	    <dt>Goal</dt>
	    <dd><%= hvg.goal %></dd>
		</div>
	</div>
	<div class="card-footer justify-content-center d-flex bg-white border-top-0">
		<div class="btn-group">
			<%= link_to 'Write', write_to_prompt_path(hvg.id), class: "btn btn-primary" %>
			
			<%= link_to "Read #{hvg.stories_count} stories", prompt_url(hvg), class: "btn btn-warning" %>
		
			<% if is_admin %>
				<%= link_to 'Edit', edit_prompt_path(hvg), class: "btn btn-secondary" %>
			<% end %>
		</div>
  </div>
</div>