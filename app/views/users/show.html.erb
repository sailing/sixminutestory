<% if current_user.id == @user.id %>
<div id="contributed_shares">
	<h1>Contributed shares | <%= link_to 'New share', new_share_path %> </h1>
<table>
	<tr>
		<th colspan="2">
		
		</td>
	</tr>

<% for share in @shares %>
  <tr>
    <td> 
	<span><%= link_to 'Edit', edit_share_path(share) %> 
	</td>

	<td>
		<span><%= link_to h(share.title), share %>
		</span>
	</td>
   <td>
		<span><%=h share.description[0,50] %>... [<%= link_to 'more', share %>]
		</span>
	</td>
  </tr>
<% end %>
</table>

</div>

<div id="pagination">
	<span><%= will_paginate @shares %>
	</span>
</div>
<br /><br />

<% end %>
<div id="show_share">
	<h1>
	  <%=h @user.login %> | <%= link_to 'Edit profile', edit_user_path(@user) %>
	</h1>

<table>
	<tr>
	<td>
			<p>
			  Website:
			</p>
			<p class="show_share_value">
			  <%= link_to h(@user.website), @user.website %>
			</p>

			<p>
			  Email address:
			</p>
			<p class="show_share_value">  
			<%= mail_to h(@user.email_address), @user.email_address %>
			</p>

		</td>
		<td>
			<p>
			  Profile:
			</p>
			<p class="show_share_description">  
			<%=h @user.profile %>
			</p>
		</td>
	</tr>
</table>

</div>
