<% content_for :pagename do %>
	<%= ":: Profile for " + h(@user.login) %>
<% end %>


<% 
	# This is for the RSS feed
	@rss_url = "http://sixminutestory.com/profile/"+@user.login+".rss" 
%>

<% content_for :sideyard do %>
	
	<%= render :partial => "site/profile_block" %>
	
<h2>Following (<%= @user.writers.count :conditions => :active %>)</h2>

<ul>
	
	<% if @user.followings.present? %>

	  <% for following in @user.followings %>
	    <li>
		
			<%= link_to h(following.writer.login), profile_url(following.writer.login) %>
				<span class="small_text">
					(<%= link_to "remove", following, :method => :delete %>)
		  		</span> 
			
	<% end %>
  	<% else %>
		<span>
				Not following anyone yet.
		</span>
	<% end %>
</ul>
<h2>Followers (<%= @user.followers.count :conditions => :active %>)</h2>
<ul>
	<% if @user.followers.present? %>
	  <% for follower in @user.followers %>
		<li>
			<%= link_to h(follower.login), profile_url(follower.login) %>
		</li>
	    
	  <% end %>
	<% else %>
		<span>
				No followers as of yet.
		</span>
	<% end %>
	
</ul>
<% end %>

<h4>
	<% if is_user && current_user.id == @user.id %>
		Stories by writers you follow
	<% else %>
		Stories by <%= @user.login %>
	<% end %>
</h4>

 <%= render :partial => "layouts/show_stories" %>
