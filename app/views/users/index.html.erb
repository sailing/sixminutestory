<h1>Users Admin</h1>
<% if is_admin %>
	<table class="table">
		<tr>
			<th>status</th>
			<th><a href="?order=login">username</a></th>
			<th><a href="?order=email_address">email</a></th>
			<th><a href="?order=stories_count DESC">stories</a></th>
			<th>followers</th>
		</tr>
	<%- @users.each do |user| %>

		<tr>
			<td>
				<span>

						<% if user.active? %>
							<%= link_to "Suspend", disable_user_url(user) %>
						<% else %>
							<%= link_to "Activate", enable_user_url(user) %>
						<% end %>
				</span>
			</td>

			<td>
				<span>
					<%= link_to h(user.login), user %>
				</span>
			</td>

			<td>
				<span>
					<%= h(user.email_address) %>
				</span>
			</td>

			<td>
				<%= link_to user.stories_count.to_s, profile_path(user) %>
			</td>
			<td>
				<%= user.followers.size {where(:active => true)} %>
			</td>
		</tr>

	<% end %>

	<% if @users.present? %>
		<tr id="pagination">
			<td colspan=5>
				<%= page_entries_info @users %>
				<%= paginate @users %>
			</td>
		</tr>
	<% end %>


	</table>
<% end %>