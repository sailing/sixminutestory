<div class="add_story_form">
<h1>Join Six Minute Story</h1>
<% form_for @user, :url => account_path do |f| %>
<table>
	<tr>
		<td>
			<label for="user_login">Username</label>
			<%= f.error_message_on 'login' %><br />
		<%= f.text_field :login %>
		</td>
	</tr>
	<tr>
		<td><%= f.label :email_address, f.object.new_record? ? nil : "Change email" %><br />
			<%= f.error_message_on 'email_address' %><br />	
		<%= f.text_field :email_address %>
		</td>
	</tr>

	<tr>
		<td><%= f.label :password, f.object.new_record? ? nil : "Change password" %><br />
			<%= f.error_message_on 'password' %><br />
		<%= f.password_field :password %>
		</td>
	</tr>
	<tr>
		<td><%= f.label :password_confirmation %><br />
			<%= f.error_message_on 'password_confirmation' %><br />
		<%= f.password_field :password_confirmation %>
		</td>
	</tr>
	<tr>
		<td>
		<%= recaptcha_tags :display => {:theme => "clean"} %>
		</td>
	</tr>
	<tr>
		<td><%= image_submit_tag("register.png", :name => "register", :id => "register-button", :disabled => false) %>
		</td>
	</tr>
	  
</table>
<% end %>
</div>