<section class="d-flex flex-fill justify-content-around py-4 p-3">
  <div class="col-md-5 card p-0 mr-0 mr-md-3">
    <h2 class="card-header">Log in</h2>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), form_class: "form-horizontal") do |f| %>
        <div class="form-group row">
          <%= f.label :email, class: "col-form-label col-sm-3" %><br />

          <div class="col-sm-9">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-form-label col-sm-3" %><br />
          <div class="col-sm-9">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-check row">
            <div class="col-sm-9 offset-sm-3 pl-4">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, class: "form-check-label" %>
            </div>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
    <div class="card-footer">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>