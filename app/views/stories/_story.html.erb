	<article>
			
			<header>
				<hgroup>
					<h1>
						<% if story.title.present? %>
							<!-- Story title as a link in the listings -->
								<%= link_to h(story.title), story_url(story) %>
						<% else %>
								<%= link_to "Untitled Story", story_url(story)%>
						<% end %>
					</h1>
					
						<p>
							by <%= link_to h(story.user.login), profile_path(story.user) %> â€“
							<%=h time_ago_in_words(story.created_at) %> ago
							<%= link_to "Edit Story Details", edit_story_url(story) if is_owner_or_admin %>
		
							<% unless @stories %>		
							<div style="width:40%;float:right;">
								<iframe src="http://www.facebook.com/plugins/like.php?href=<%=h story_url(@story) %>&amp;layout=standard&amp;show_faces=true&amp;width=300&amp;action=like&amp;font=segoe+ui&amp;colorscheme=light&amp;height=25" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:300px; height:25px;" allowTransparency="true"></iframe>
							</div>
							<% end %>
						</p>
						<p>
							
			<% unless @stories.present? %>
							<span id="comments_in_header">
							<%= link_to_unless_current pluralize(story.comments_count, 'remark'), 
								{:controller => 'stories', :action => 'show', :id => story, :anchor => 'comments'} do
									link_to pluralize(story.comments_count, 'remark'), {:anchor => "comments"}
								end 
							%>
							</span>
							<span>|| <%= render :partial => "votes/story_vote", :story => story %></span>
							
							
			<% end %>
						</p>
				</hgroup>
			</header>

			
				<% if @stories %>
					<%= simple_format(sanitize(truncate(h(story.description), :length => 350, :omission => "...&nbsp;&nbsp;&nbsp;[" + link_to("Read more...", story_url(story))+ "]" ))) %>
				<% else %>
					<%= simple_format(sanitize(h(story.description))) %>
				<% end %>

				<% unless @stories %>
					<section class="center">
						<%= render :partial => 'stories/share_in_story', :locals => {:story => story} %>
					</section>
				<% end %>
				
	<footer>
		
	
	<% unless @stories %>
		<section class="float_left">
			<% if is_user %>
				<div id="flag">
				
					<!-- This is how people flag stories -->
		
					<%= form_tag(:url => flag_stories_url, :method => "post", :remote => true) do -%>

					<%= hidden_field_tag 'story', story.id %>
				
					<div id="flag_button">
						<%= image_submit_tag 'flag.png', 
							:name => "flag", 
							:id => "flag-button",
							:disabled => false %>
					</div>
		  			<% end -%>	
				</div>
			<% end -%>
		</section>
	<% end -%>
	

				<span id="comments_in_footer"><%= link_to pluralize(story.comments_count, 'remark'), story_url(story, :anchor => "comments") %></span>
				<span>&nbsp;||&nbsp;</span>
				<span id="favorites_in_footer">
						<%= pluralize(story.votes_for, 'favorite') %>
				</span>

			<% if is_admin %>
			<span>&nbsp;||&nbsp;</span>
			<span id="counter_in_footer">
				<%= pluralize(story.counter, 'view') %>
			</span>
			
				<br />
					<%= link_to 'Edit', edit_story_url(story) %>&nbsp;||&nbsp;<%= story.flagged %>&nbsp;flags
			<% end %>
	</footer>
</article>

