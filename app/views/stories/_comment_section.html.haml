.row-fluid
  .col-12
    - if current_user
      .form
        = form_for([@story, Comment.new], html: { id: 'comments_form' }, remote: true) do |f|
          = f.text_area :comment, class: "col-12 form-control my-3", rows: 5
          #comment_submit_container.mb-3
            = button_tag name: "contribute", id: "contribute-button", disabled: false, class: "btn btn-success float-right" do
              %span.mr-1 Contribute
              = icon("fas", "angle-right")
    - else
      #signin_or_register.p-3
        %p
          Want to comment? Login or Join
        = link_to "Login", new_session_path(User), class: 'btn btn-primary'
        = link_to "Sign up", new_registration_path(User), class: 'btn btn-dark'
.row-fluid
  #comments.col-12
    = render partial: "comments/comment", collection: @story.comments

