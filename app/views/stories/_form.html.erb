<%= simple_form_for(@story) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :license %>
    <%= f.input :votes_count %>
    <%= f.input :comment_counter %>
    <%= f.input :flagged %>
    <%= f.input :counter %>
    <%= f.input :user_id %>
    <%= f.input :prompt_id %>
    <%= f.input :contest_id %>
    <%= f.input :delta %>
    <%= f.input :active %>
    <%= f.input :created_at %>
    <%= f.input :updated_at %>
    <%= f.input :cached_slug %>
    <%= f.input :comments_count %>
    <%= f.input :featured %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
