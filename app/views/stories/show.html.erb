<% content_for :pagename do %>
	:: <%= h(@story.title) %>
<% end %>



<% content_for :sideyard do %>
	<% if @frontpage %>
	<div id="elevator_pitch">
		
		<!-- 
		<p>
		Since current language must be <strong>concise, immediate and eloquent</strong>, I created <em>Six Minute Story</em> &mdash; a user-driven, <a href="http://en.wikipedia.org/wiki/Micro_fiction" target="_blank">micro-fiction</a> application &mdash; to provide an arena to practice <em>the art of the ad-lib</em>, the impromptu.
	
				<strong>Six Minute Story</strong> is a crowd-driven, 
				<a href="http://en.wikipedia.org/wiki/Micro_fiction" target="_blank">flash-fiction</a> 
				<strong>experiment</strong>.
		</p>
		<p>
				The goal is to fill <strong>the cities of the earth</strong> with eloquence. <%= link_to "read more", faq_url %>
		</p>
		-->
		<p>
			<strong>Six Minute Story</strong> is a growing collection of stories written in six minutes or less. 
		</p>
		<p>
			Together, we're <em>filling the world</em> with ad-libbed eloquence.
		</p>
		<% if is_user %>
		<div class="green button_container">
			<%= link_to "Go Write", write_url %>
		</div>
		<% else %>
		

		<% end %>
	</div>
	<div id="show_story_toolbar" class="toolbar_container">
		<table>
			<tr>
				<td>
					<div class="green button_container">
						<%= link_to "Learn more", faq_url %>
					</div>
				</td>
				<td>
					<div class="purple button_container">
						<%= link_to "Join", register_url %>
					</div>
				</td>
			</tr>
		</table>
	</div>

		<h2>Connect</h2>
		<!-- List of things to add:  -->
		<% if is_user %>
			<p>
				<%= link_to "Suggest a Prompt", suggest_a_prompt_url %>
			</p>
		<% end %>
		<div>
		<p>
		<a href="http://www.twitter.com/6minutestory">
				<img 	src="http://twitter-badges.s3.amazonaws.com/follow_us-a.png" 
						alt="Follow Six Minute Story on Twitter" />
			</a>
		</p>
		<p>
			<a href="http://facebook.com/sixminutestory"><%= image_tag "facebook.png" %></a>
		</p>
		</div>
		
		<div class="clear space">
		</div>

		
		<hr color="#222222" width="90%">
		

	<% end %><!-- end if frontpage conditional -->
<h2>Browse</h2>
	<div id="toolbar">
		<%= render :partial => "toolbar", :locals => { :story => @story } %>
	</div>
	<% unless @frontpage %>
		<%= render :partial => "site/profile_block" %>
	<% end %>
		<div class="clear space"></div>
		<% if is_admin %>
			<% if @story.active == true %>
			<div id="unfollowing_button" class="button_container">
			<%= link_to "Disable", disable_story_url(@story), 
			:confirm => 'Are you sure you want to disable this story? The story will no longer be visible!', 
			:method => :delete %>
			</div>
			<% elsif @story.active == false %>
			<div id="following_button" class="button_container">
			<%= link_to "Enable", enable_story_url(@story), 
			:confirm => 'Are you sure you want to enable this story? The story will become visible!'
			%>
			</div>
			<% end %>

				<% if @story.featured == true %>
				<div id="unfollowing_button" class="button_container">
				<%= link_to "Unfeature", unfeature_story_url(@story), 
				:confirm => 'Are you sure you want to unfeature this story? The story will no longer be featured!', 
				:method => :delete %>
				</div>
				<% elsif @story.featured == false %>
				<div id="following_button" class="button_container">
				<%= link_to "Feature", feature_story_url(@story), 
				:confirm => 'Are you sure you want to feature this story? The story will become featured!'
				%>
				</div>

			<% end %>
			<div id="following_button" class="brown button_container">
				<%= link_to "Edit Details", edit_story_url(@story) %>
			</div>
		<% end %>
		<h2>The prompt for this story</h2>
			<%= show_prompt %>
		<div class="clear"></div>
		
<% end %>



<% unless @frontpage %>
 <h1><%= @featured ? "featured story" : "" %></h1>
<% end %>
<%= render :partial => "layouts/browsing" %>
	
	
	<div id="show_stories">
		
		<div id="indStory" >
			<div id="title_bar" class="indStory">


				<% if @story.title.present? %>
				<span class="title">
					<!-- Story title as a link in the listings -->
					<%= link_to h(@story.title), read_story_url(@story) %>
				</span>
				<% else %>
				<span>
					<!-- Story title as a link in the listings -->
					<%= link_to "Untitled Story", read_story_url(@story)%>
				</span>

				<% end %>

					<span class="author">
					by <%= link_to h(@story.user.login), profile_path(@story.user) %>
					<%=h time_ago_in_words(@story.created_at) %> ago
			
					</span>
			
			</div>
		
	
			<div id="storyAndMeta">
				
				<div class="story">
										<%= render :partial => 'share_in_story' %>
	
					<%= simple_format(sanitize(h(@story.description))) %>
				</div>
				<iframe src="http://www.facebook.com/plugins/like.php?href=<%=h read_story_url(@story) %>&amp;layout=standard&amp;show_faces=true&amp;width=450&amp;action=like&amp;font=segoe+ui&amp;colorscheme=light&amp;height=65" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:200px; height:65px;" allowTransparency="true"></iframe>
		<% if is_user %>
		<div id="flag">
						<!-- This is how people flag stories -->
		
			<% form_tag(flag_story_url, :method => "post") do -%>

			<%= hidden_field_tag 'story', @story.id %>
			<%= image_submit_tag 'flag.png', 
				:name => "flag", 
				:id => "flag-button", 
				:disabled => false %>

  			<% end -%>	
		</div>
		<% end -%>
		
	</div>
	</div>

<% unless @frontpage %>
	<div id="show_story">
	<div id="information_container">
		<div>
			<table>
				<tr>
					<td class="border_right">
					<span class="label">license</span>

						<br />
						<p class="value">
							 <%=h @story.license %>
						</p>
					</td>

					<td class="border_right">
					<span class="label">tags</span>

						<br />
						<p class="value">	
							<% @story.tags.each do |tag| -%>
					   			<%= link_to h(tag.name), tag_url(h(tag.name)) %>
							<% end -%>
						</p>
					</td>
				</tr>
			</table>
		</div>
	</div>


</div>


<div id="comments">

	<% if @story.comments.present? %>
	<h1>remarks</h1>
			<%= render :partial => "comments/comment", :collection => @story.comments %>
	<% end %>
</div>
<% if current_user %>

	<div id="comment_form">
		<h1>remark</h1>

		<% form_remote_for :comment, :url => comments_path, :html => { :id => 'comments_form' } do |f| %>
  			<%= f.hidden_field :story_id, :value => @story.id %>
  			<%= f.hidden_field :user_id, :value => current_user.id %>
  			
			<div class="comment_field_container">
				
					<%= f.text_area :comment, :rows => 3, :cols => 55 %>

	    			<div id="comment_submit_container" class="center">
						<%= image_submit_tag("contribute.png", :name => "contribute", :id => "contribute-button", :disabled => false) %>

					</div>
				
		  	</div>

			
	
		<% end %>
	</div>

<% else %>
	<div id="signin_or_register">
		<%= rpx_popup( :link_text => "Login", :app_name => "six-minute-story", :return_url => user_session_url, :unobtrusive => false ) %>
		or
		<%= rpx_popup( :link_text => "Join", :app_name => "six-minute-story", :return_url => user_session_url, :unobtrusive => false ) %> 
		to remark.
	</div>
<% end %>
<% end %> <!-- ending unless @frontpage -->


