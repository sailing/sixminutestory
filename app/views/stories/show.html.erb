<% content_for :pagename do %>
	<%=h @story.title %>
<% end %>

<% content_for :sideyard do %>

		<%= render :partial => "toolbar", :locals => { :story => @story } %>

		<%= render :partial => "site/profile_block" %>
		
<% end %>

<div id="show_story">
 <h1>read</h1>

	<div id="title"> 
		
		<h2 class="story_title">
			<%=h @story.title %>
		</h2>
				
		<h3 class="attribution">
			by <%= link_to @story.user.login, profile_path(@story.user)  %> 
			<%=h time_ago_in_words(@story.created_at) %> ago
		</h3>
		
	</div>
		
	<div class="clear space"></div>
	<% if is_admin %>
		<% if @story.active == true %>
		<div id="unfollowing_button" class="button_container">
		<%= link_to "Disable", disable_story_url(@story), 
		:confirm => 'Are you sure you want to disable this story? The story will no longer be visible!', 
		:method => :delete %>
		</div>
		<% elsif @story.active == false %>
		<div id="following_button" class="button_container">
		<%= link_to "Enable", enable_story_url(@story), 
		:confirm => 'Are you sure you want to enable this story? The story will become visible!'
		%>
		</div>
		<% end %>
		
			<% if @story.featured == true %>
			<div id="unfollowing_button" class="button_container">
			<%= link_to "Unfeature", unfeature_story_url(@story), 
			:confirm => 'Are you sure you want to unfeature this story? The story will no longer be featured!', 
			:method => :delete %>
			</div>
			<% elsif @story.featured == false %>
			<div id="following_button" class="button_container">
			<%= link_to "Feature", feature_story_url(@story), 
			:confirm => 'Are you sure you want to feature this story? The story will become featured!'
			%>
			</div>
		
		<% end %>
	<% end %>
	<div class="center">
		<%= render :partial => "prompt" %>
	</div>
	<div class="clear"></div>
		<div class="description">
			
			<!-- Here's the story -->
			<%= simple_format(sanitize(h(@story.description))) %>
				
				
				
		</div>
		<% if is_user %>
		<div id="flag">
						<!-- This is how people flag stories -->
		
			<% form_tag(flag_story_path, :method => "post") do -%>

			<%= hidden_field_tag 'story', @story.id %>
			<%= image_submit_tag 'flag.png', 
				:name => "flag", 
				:id => "flag-button", 
				:disabled => false %>

  			<% end -%>	
		</div>
		<% end -%>

	<div id="information_container">
		<div>
			<table>
				<tr>
					<td class="border_right">
					<span class="label">license</span>

						<br />
						<p class="value">
							 <%=h @story.license %>
						</p>
					</td>

					<td class="border_right">
					<span class="label">tags</span>

						<br />
						<p class="value">	
							<% @story.tags.each do |tag| -%>
					   			<%= link_to h(tag.name), tag_url(h(tag.name)) %>
							<% end -%>
						</p>
					</td>
				</tr>
			</table>
		</div>
	</div>


</div>

<%= render :partial => "comments/comments" %>







