<div id="show_share">
 <h1><%=h @share.title %>&nbsp;&nbsp;&nbsp;&nbsp;
<% if current_user && current_user.id == @share.user_id %>
	<%= link_to 'Edit', edit_share_path(@share) %> |
	<%= link_to 'Destroy', @share, :confirm => 'Are you sure?', :method => :delete %>
	<% else %>
	<%= link_to 'Submitter\'s profile', profile_url(@share.user_id)%>
	<% end %>
	</h1>

<table>
	<tr>
		<td colspan=2>
			<span><h2><%= link_to (@share.link[0,65]+"..."), @share.link %></h2> 
			</span>

		</td>
	</tr>
	<tr>
		<td class="show_share_description_container">
			
		
  			<p class="show_share_description">
				<%=h @share.description %>
			</p>
		</td>
				<td>
					<p>License:</p>
					<p class="show_share_value"><%= @share.license %>
					<p>Website:</p>
						<p class="show_share_value"><%= link_to (@share.website[0,35]+"..."), @share.website %> 
						</p>


					  <p>Source:</p>
							<p class="show_share_value"><%=h @share.source %>
							</p>
							
			<!-- AddThis Button BEGIN -->
			<div class="share_this_share">
				<script type="text/javascript">
				var addthis_pub="sharearchy";
				</script>
				<a href="http://www.addthis.com/bookmark.php?v=20" onmouseover="return addthis_open(this, '', '[URL]', '[TITLE]')" onmouseout="addthis_close()" onclick="return addthis_sendto()"><img src="http://s7.addthis.com/static/btn/lg-share-en.gif" width="125" height="16" border="0" alt="Share" /></a>
				<script type="text/javascript" src="http://s7.addthis.com/js/200/addthis_widget.js">
					</script>
			</div>
			<!-- AddThis Button END -->
				
		<!--
					  <p>Alternative Contact:</p>
							<p class="show_share_value"><%=h @share.alternative_contact %>
							</p>
		-->
				</td>

	</tr>

		
</table>
</div>






