<h1>Login</h1>

<div class="add_story_form float_left">
<% form_for @user_session, :url => user_session_path do |f| %>


	<% if @user_session.errors.present? %>
	<div id="errorExplanation">    
		<span>
			Invalid username or password
	  	</span>
	</div>
	<% end %>
<table >
	<tr>
		<th>
				<%= f.label :login, "Email" %>
		</th>
		<td>
		  		<%= f.text_field :login %>
		</td>
	</tr>
	<tr>
		<th>			
				<%= f.label :password %>
		</th>
		<td>
		  
				<%= f.password_field :password %>
		</td>
	</tr>
	<tr>
	<td colspan=2>
			
				<%= image_submit_tag("login.png", 
						:name => "login", 
						:id => "login-button", 
						:disabled => false) %>	 
	</td>
	</tr>
	<tr>
	<td colspan=2>
		<div>
				<%= f.check_box :remember_me %>
				<%= f.label :remember_me, "Remember me" %>
				
		</div>
	</td>
	</tr>
	<tr>	
	<td colspan=2>
			<h5>
				Don't have an account? 
				<%= link_to "Sign up", register_path %>
			</h5>
	</td>
	</tr>
</table>
<% end %>
</div>
<div id="facebook_login_container">
	<h3>
		Login with facebook
	</h3>
	<div id="facebook_login_button">
		<%= authlogic_facebook_login_button :length => "long" %>
	</div>		
</div>
