<div class="add_story_form">
<% form_for @user_session, :url => user_session_path do |f| %>

	<h1>Login</h1>

<table >
	<tr>
		<td>
			<p>
		  		<%= f.label :login %><br />
				<%= f.error_message_on 'login' %><br />
		  		<%= f.text_field :login %><br />

			</p>
			<p>
				<%= f.label :password %><br />
				<%= f.error_message_on 'password' %><br />
		  		<%= f.password_field :password %><br />
			</p>
		  		<span><%= f.check_box :remember_me %> <%= f.label :remember_me %></span>
			  	<p>
					<%= f.submit "Login" %> | <%= link_to "Register", register_path %>
				</p>
		  	
		</td>
	</tr>
</table>
<% end %>
</div>