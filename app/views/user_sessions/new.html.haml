.row-fluid
  .span6
    #login
      %h1 Login
      = raw(rpx_embed(:link_text => "Register/Sign in with RPX..", :app_name => "six-minute-story", :return_url => user_session_url))
  .span6
    #user_form
      = form_for @user_session, :url => user_session_path, html: {class: "form-horizontal"} do |f|
        - if @user_session.errors.present?
          #errorExplanation
            %span
              Invalid username or password
        .control-group
          = f.label :login, "Email", class: "control-label"
          .controls
            = f.text_field :login
        
        .control-group
          = f.label :password, "Password", class: "control-label"
          .controls
            = f.password_field :password
        .control-group
          = f.label :remember_me, "Remember me", class: "control-label"
          .controls
            = f.check_box :remember_me
        .control-group
          .controls
            = f.submit "Login"
        %h5
          Don't have an account?
          %small= link_to "Sign up", new_user_url
