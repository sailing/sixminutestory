<div id="comments">	

<% if @story.comments.present? %>

<h1>remarks</h1>

<% @story.comments.each do |comment| %>

		
			<div class="comment_container" id="comment_<%= comment.id %>">
				
			<h4>	<%= link_to h(comment.user.login), user_path(comment.user.id) %> - <%=h time_ago_in_words(comment.created_at) %> ago
			</h4>	
						<p>
							<%= auto_link(simple_format(sanitize(comment.comment)),
							:href_options => { :target => '_blank' }) %>
						</p>

						<% if is_admin %>
							<div class="meta">
								<%= link_to 'Delete Comment', comment, :confirm => 'Are you sure you want to delete this comment?', :method => :delete %>
							</div>
						<% end %>

			</div>

			
<% end %>
<br />
<% end %>

<% if current_user %>

	<div id="comment_form">
		<h1>remark</h1>

		<% form_for(@comment) do |f| %>
  			<%= f.hidden_field :story_id, :value => @story.id %>
  			<%= f.hidden_field :user_id, :value => current_user.id %>
  			
			<div class="comment_field_container">
				
					<%= f.text_area :comment, :rows => 3, :cols => 55 %>

	    			<div id="comment_submit_container" class="center">
						<%= image_submit_tag("contribute.png", :name => "contribute", :id => "contribute-button", :disabled => false) %>

					</div>
				
		  	</div>

			
	
		<% end %>
	</div>

<% else %>
	<div id="signin_or_register">
		<%= rpx_popup( :link_text => "Login", :app_name => "six-minute-story", :return_url => user_session_url, :unobtrusive => false ) %>
		or
		<%= rpx_popup( :link_text => "Join", :app_name => "six-minute-story", :return_url => user_session_url, :unobtrusive => false ) %> 
		to remark.
	</div>
<% end %>


</div>

