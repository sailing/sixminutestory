.row.mb-3.mx-3.border-top.border-light.py-3
  .col-sm-1
    = render :partial => "votes/comment_vote", :object => comment, :as => :comment
  .col-sm-11{:id => "comment_#{comment.id}"}
    %h5
      = link_to h(comment.user.login), profile_path(comment.user)
      = time_ago_in_words(comment.created_at) + " ago"
      - if is_admin or comment.user == current_user
        = link_to comment, :confirm => 'Are you sure you want to delete this comment?', :method => :delete, rel: "tooltip nofollow", title: "Remove this comment", class: "remove" do
          %i.icon-remove
    = auto_link(simple_format(sanitize(comment.comment)))


