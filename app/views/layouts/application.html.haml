!!!
%html
  %head
    %title= content_for?(:title) ? yield(:title) : "Six Minute Story"
    = csrf_meta_tags

    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"

    = javascript_include_tag 'application'


    = stylesheet_link_tag "application", :media => "all"
    = favicon_link_tag
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    %meta{:charset => "utf-8"}
    %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0", :name => "viewport"}

  %body{data: {action: action_name, controller: controller_name}}
    #wrapper
      #sidebar
        %a.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar

        %nav#nav.navigation{:role => "navigation"}
          %ul.unstyled
            %li.active{"data-section" => "1"}
              %i.icon-home
              %span Home
            %li{"data-section" => "2"}
              %i.icon-pencil
              %span Write
            %li{"data-section" => "3"}
              %i.icon-book
              %span Read
            %li{"data-section" => "4"}
              %i.icon-comment
              %span Social
            %li.last{"data-section" => "5"}
              %i.icon-envelope
              %span Contact

      #container
        = yield

        #footer
          .row-fluid
            .span12
