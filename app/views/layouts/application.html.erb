	<% else %>
		
		<%= yield(:sideyard) %> 
		
		<% if is_user %>
		<h2>Contribute</h2>
		<p>
		<%= link_to "Suggest a Prompt", new_prompt_url %>
		</p>
		<% end %>
		<br />
				
	
	<% end # close yield conditional %>

 
	</div> <!-- close sideyard_container -->

</div> <!-- close left layout container -->
  
</div>
 	<div class="right_container">
	<div class="house_container">

	    <%= yield  %>

	</div>
