	<script src="http://static.ak.connect.facebook.com/js/api_lib/v0.4/FeatureLoader.js.php" type="text/javascript"></script>
	
	<meta name="title" content="Six Minute Story" />
	<meta name="description" content="Six Minute Story is a user-driven, flash-fiction experiment. The goal is to fill the world with ad-libbed eloquence." />
	<link rel="image_src" href="http://sixminutestory.com/images/logo_square.png" />
	
	<link rel="alternate" href="<%= @rss_url.present? ? @rss_url : 'http://feeds.feedburner.com/SixMinuteStoryRecentStories' %>" type="application/rss+xml" media="screen" title="RSS" charset="utf-8">
</head>
<body>
	
	<!-- for facebook connect -->
	<%= fb_connect_javascript_tag %>
 	<%= init_fb_connect "XFBML" %>
	
	<!-- escapes frames -->
	<script type="text/javascript">
